//As constructors and destructors helps reducing the amount of code, they are very useful!

<!DOCTYPE html>
<html>
<body>

<?php
class Fruit {
  public $name;
  public $color;

  function __construct($name) {
    $this->name = $name; 
  }
  function get_name() {
    return $this->name;
  }
}

$apple = new Fruit("Apple");

//without $apple->set_name('Apple');

echo $apple->get_name();
?>
 
</body>
</html>
